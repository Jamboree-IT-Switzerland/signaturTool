{
  "app": {
    "name": "Jamboree CH Signature Generator",
    "version": "1.0.0",
    "defaultLanguage": "de",
    "supportedLanguages": ["de", "fr", "it"]
  },
  "signature": {
    "websiteUrl": "www.jamboree.ch",
    "logoPath": "img/Jamboree_Logo_Mailsignatur_small.png",
    "logoHeight": "150px",
    "fontFamily": "arial",
    "fontSize": "12.5px",
    "phoneNumber": "+41 56 426 22 11 (Tue & Fri 08:00-12:00)"
  },
  "form": {
    "validation": {
      "required": ["gender", "firstname", "role", "Comission"],
      "emailPattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
    }
  },
  "ui": {
    "showLanguageSwitcher": true,
    "showStepNumbers": true,
    "enableFormValidation": true
  }
}
