{
  "app": {
    "name": "Mova Signature Generator",
    "version": "2.0.0",
    "defaultLanguage": "de",
    "supportedLanguages": ["de", "fr", "it"]
  },
  "signature": {
    "websiteUrl": "www.mova.ch",
    "logoPath": "img/Mova_Logo_black_rgb_Mailsignatur_marginright_big.png",
    "logoHeight": "150px",
    "fontFamily": "arial, sans-serif",
    "fontSize": "12.5px"
  },
  "form": {
    "validation": {
      "required": ["gender", "firstname", "role", "Comission"],
      "emailPattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
      "phonePattern": "^[+]?[0-9\\s\\-\\(\\)]{10,}$"
    }
  },
  "ui": {
    "showLanguageSwitcher": true,
    "showStepNumbers": true,
    "enableFormValidation": true
  }
}
